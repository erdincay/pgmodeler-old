<!ELEMENT pgmodeler (operation-list, autosave-model, paper-conf, widget-conf*, session*)>

<!ELEMENT operation-list EMPTY>
<!ATTLIST operation-list size CDATA #REQUIRED>

<!ELEMENT autosave-model EMPTY>
<!ATTLIST autosave-model enable (false|true) "false">
<!ATTLIST autosave-model interval CDATA #IMPLIED>

<!ELEMENT widget-conf (widget+)>
<!ELEMENT widget EMPTY>
<!ATTLIST widget visible (false|true) "false">
<!ATTLIST widget id (fileToolbar|editToolbar|viewToolbar|modelToolbar|operationsDock|objectsDock) "fileToolbar">
<!ATTLIST widget position (left|top|right|bottom) "left">

<!ELEMENT session (file+)>
<!ELEMENT file EMPTY>
<!ATTLIST file id CDATA #REQUIRED>
<!ATTLIST file path CDATA #REQUIRED>

<!ELEMENT paper-conf EMPTY>
<!ATTLIST paper-conf type CDATA #REQUIRED>
<!ATTLIST paper-conf orientation (portrait|landscape) "landscape">
<!ATTLIST paper-conf margin CDATA #IMPLIED>


